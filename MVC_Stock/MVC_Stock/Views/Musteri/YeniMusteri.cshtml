@model MVC_Stock.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Müşteri Ekleme Sayfası</h2>

<form method="post" class="form-group">

    <div>
        <label>Eklenecek Müşterinin Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control", @id = "txtAd" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:red" })
    </div>

    <div>
        <label>Eklenecek Müşterinin Soyadı</label>
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:red" })
    </div>


    <div style="margin-top:20px">
        <button class="btn btn-info" id="btn1" onclick="EkranaBas()">Müşteri Ekle</button>
    </div>


    <script>
        function EkranaBas() {
            if (document.getElementById("txtAd").value == "") {

                alert('Ekleme İşlemi Gerçekleşmedi');
            }
            else {
                alert('Müşteri Ekleme İşlemi Yapıldı...!');
            }
        }
    </script>              @*43. Video yorumlarda buldum işe yarıyor.*@


</form>